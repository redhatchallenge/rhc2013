<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="org.redhatchallenge.rhc2013.resources.Resources"/>

    <g:HTMLPanel>
        <div class="{res.grid.clear}"/>
        <div class="{res.grid.container_12} {res.grid.clearfix}">
            <div id="main">
                <div class="{res.grid.grid_12}">
                    <div id="sidebar" style="float: right">
                        <ul class="{res.main.socialIcons}">
                            <li><span style="position: relative; top: 4px; left: -2px;"><strong>Connect:</strong></span></li>
                            <li><a target="_blank" href="http://www.facebook.com/redhatinc?fref=ts"><img src="images/social_media_icons-16.png" alt="Facebook" /></a></li><li><a target="_blank" href="http://www.twitter.com/red_hat_apac"><img src="images/social_media_icons-17.png" alt="Twitter" /></a></li>
                        </ul>
                    </div>

                    <div class="{res.grid.grid_8} {res.grid.alpha}" style="margin-right: 40px">
                        <div id="table2">
                            <table>
                                <tr>
                                    <td colspan="2"><h1>Forgot your password?</h1></td>
                                </tr>
                                <tr>
                                    <td class="{res.main.rowform}">Email Address:</td>
                                    <td class="{res.main.rowform}"><g:TextBox ui:field="emailField" maxLength="120" visibleLength="33"/></td>
                                </tr>
                                <tr>
                                    <td class="{res.main.rowform}">Contact:</td>
                                    <td class="{res.main.rowform}"><g:TextBox ui:field="contactField" maxLength="120" visibleLength="33"/></td>
                                </tr>
                                <tr>
                                    <td>&nbsp;</td>
                                    <td><g:Image ui:field="resetPasswordButton" url="images/submit_button.png"/></td>
                                </tr>
                                <tr>
                                    <td><g:Label ui:field="errorLabel"/></td>
                                </tr>
                            </table>
                        </div>
                        <div class="{res.main.panel02} {res.grid.clearfix}" style="margin-top: 1em;"/>
                    </div>
                    <div class="{res.grid.clear}"/>
                </div>
            </div>
        </div>
        <!--<h1>Reset Password</h1>-->
        <!--Please enter the email address of the account: <g:TextBox ui:field="emailField"/><br/>-->
        <!--Please enter the contact number associated with the account: <g:TextBox ui:field="contactField"/><br/>-->
        <!--<g:Button ui:field="resetPasswordButton" text="Reset" /><br/>-->
        <!--<g:Label ui:field="errorLabel"/>-->
    </g:HTMLPanel>
</ui:UiBinder>