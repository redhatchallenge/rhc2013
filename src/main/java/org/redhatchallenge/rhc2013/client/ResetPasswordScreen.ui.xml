<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <h1>Reset Password</h1>
        Resetting password for <g:Label ui:field="emailLabel"/><br/>
        Please enter new password: <g:PasswordTextBox ui:field="passwordField"/><br/>
        Please confirm your new password: <g:PasswordTextBox ui:field="confirmPasswordField"/><br/>
        <g:Button ui:field="resetPasswordButton" text="Reset" /><br/>
        <g:Label ui:field="errorLabel"/>
        <g:Hyperlink ui:field="loginLink" text="Click here to return to login"/>
    </g:HTMLPanel>
</ui:UiBinder>