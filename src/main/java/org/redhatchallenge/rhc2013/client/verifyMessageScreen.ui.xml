<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field="res" type="org.redhatchallenge.rhc2013.resources.Resources"/>

    <g:HTMLPanel>
        <meta property="og:title" content="I Can Haz Share Buh-ton" />
        <meta property="og:description" content="How to Share Content from Your Website on Facebook!" />
        <meta property="og:image" content="huebris-facebook-share-thumb.jpg" />

        <div class="{res.grid.clear}"/>
        <div class="{res.grid.container_12} {res.grid.clearfix}">
            <div id="main">
                <div class="{res.grid.grid_12}">

                    <div class="{res.grid.grid_8} {res.grid.alpha}" style="text-align:center; margin:0 auto;">
                        <div class="{res.main.textbox}">
                            <g:HTML ui:field="messageLabel"/>
                            <center>
                            <table>
                            <tr>
                                <td><span style="position: relative; top: 7px; left: -2px;"><strong>SHARE:</strong></span></td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                                  <td><g:Image ui:field="socialButton1"/></td>
                                  <td><g:HTML  ui:field="socialButton3"/></td>
                                  <td><g:HTML ui:field="socialButton2"/></td>
                                <!--<li><a href="https://www.facebook.com/sharer/sharer.php?u=example.org" target="_blank"> <img src="images/social_media_icons-16.png" alt="Facebook" /></a>-->

                            </table>
                            </center>
                        </div>
                        <div class="{res.main.panel02} {res.grid.clearfix}" style="margin-top: 1em;"/>
                    </div>
                    <div class="{res.grid.clear}"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>